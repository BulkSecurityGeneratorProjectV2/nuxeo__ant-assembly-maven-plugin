<?xml version="1.0"?>
<project name="test-it-fail"
         default="run-tests">
  <taskdef resource="org/nuxeo/build/antlib.xml" uri="urn:nuxeo-build" />
  <taskdef resource="org/nuxeo/build/artifact/antlib.xml"
           uri="urn:nuxeo-artifact" />
  <taskdef resource="net/sf/antcontrib/antlib.xml" />

  <target name="run-tests" description="Fail">

    <var name="errors" value="1" />
    <var name="errmsg" value="I'm failing" />
    <fail status="${errors}" message="${errmsg}">
      <condition>
        <not>
          <!-- change this to check failure (do not fail by default) -->
          <!--<equals arg1="${errors}" arg2="0" />-->
          <equals arg1="${errors}" arg2="1" />
        </not>
      </condition>
    </fail>

  </target>

</project>